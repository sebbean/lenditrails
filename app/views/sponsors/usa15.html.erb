<%= title "LendIt USA 2015 Sponsors Page" %>
<% meta_description "Sponsors of the LendIt USA 2015 Peer-to-Peer and Online Lending Conference." %>
<% meta_keywords "p2p, online lending, peer-to-peer, LendIt, sponsors" %>
<%= canonical_tag -%>

<main class="sponsors-page">
  <div class="sponsors-main">
    <div class="sponsors-text-a">
      <div class="table">
        <div class="cell">
          <h1>LendIt USA Sponsors</h1>
          <p>The following sponsors have been confirmed for LendIt USA 2015.&nbsp;
            <a href="#more-sponsors-info" style="font-weight:500; "><span class="fa fa-arrow-circle-o-down"></span> More info below  </a></p>
        </div>
        <div class="cell">
        </div>
      </div>
    </div>


    <!-- begin SPONSORS A -->
    <div class="sponsors-a">

      <!-- begin TITLE -->
      <div class="grouping">
        <% if @title.any? %>
          <div class="header"> Title Sponsor </div>
          <div class="group">
            <% @title.each do |sponsor| %>
              <div class="item">
                <a class="sponsor-top" href="#sponsor-<%= sponsor.id %>" style="background-image:url(<%= sponsor.logo_img %>)">
                </a>


                <!-- begin bio -->
                <div style="display:none;" class="speaker-bio">
                  <div id="sponsor-<%= sponsor.id %>" class="speaker-container">
                    <div class="speaker-colorbox-title">Sponsors</div>
                    <div class="speaker-top-info">
                      <img src="<%= sponsor.logo_img %>" alt="<%= sponsor.company_name %>" class="modal-sponsor-image">
                      <div class="speaker-name">LendIt USA</div>
                      <div class="speaker-title"><%= sponsor.sponsor_level %> Sponsor</div>
                      <% if sponsor.url != nil %>
                        <div class="speaker-company">
                          <a href="<%= sponsor.url %>" target="_blank">Visit <%= sponsor.company_name %> ></a>
                        </div>
                      <% end %>
                    </div>
                    <div class="speaker-bio-text">
                      <div class="speaker-bio-text-inner"><%= raw sponsor.description %></div>
                    </div>
                    <div class="speaker-bio-mask"></div>
                  </div>
                </div>
                <!-- end bio -->


              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <!-- end TITLE -->



